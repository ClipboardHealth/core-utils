{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-ai-rules.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(gh api graphql:*)",
      "Bash(gh pr view:*)",
      "Bash(gh repo view:*)",
      "Bash(node --version)",
      "Bash(npm list)",
      "Bash(npm run embed:*)",
      "Bash(npm view:*)"
    ]
  }
}
