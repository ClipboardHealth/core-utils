{
  "name": "@clipboard-health/core-utils",
  "dependencies": {
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@nx/eslint": "22.0.3",
    "@nx/eslint-plugin": "22.0.3",
    "@nx/jest": "22.0.3",
    "@nx/js": "22.0.3",
    "@nx/webpack": "22.0.3",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.5",
    "@tsconfig/node24": "24.0.3",
    "@tsconfig/strictest": "2.0.8",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "cspell": "9.4.0",
    "eslint": "8.57.1",
    "eslint-plugin-promise": "7.2.1",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "jest-util": "30.0.5",
    "jsonc-eslint-parser": "2.4.2",
    "knip": "5.75.1",
    "lint-staged": "16.2.7",
    "markdownlint-cli2": "0.20.0",
    "nx": "22.0.3",
    "oxlint": "1.32.0",
    "prettier": "3.7.4",
    "syncpack": "13.0.4",
    "ts-jest": "29.4.2",
    "ts-node": "11.0.0-beta.1",
    "tsx": "4.21.0",
    "typedoc": "0.28.15",
    "typescript": "5.9.3"
  },
  "license": "MIT",
  "overrides": {
    "ts-node": "11.0.0-beta.1",
    "tsconfig-paths": "4.2.0"
  },
  "private": true,
  "scripts": {
    "affected": "nx affected --base main --configuration ci --parallel 8 --targets build,lint,test",
    "all": "npm run ci:check && nx run-many --configuration ci --parallel 8 --targets build,lint,test",
    "ci:check": "prettier --check . && npm run cspell -- . && syncpack lint && npm run embed:check && npm run knip && oxlint",
    "ci:install": "npm clean-install --audit false --fund false",
    "cspell": "cspell --no-summary --no-progress --no-must-find-files",
    "docs": "rm -rf docs && typedoc",
    "embed": "tsx packages/embedex/src/bin/cli.ts --sourcesGlob 'packages/*/examples/**/*.{md,ts}'",
    "embed:check": "npm run embed -- --check",
    "format": "prettier --write .",
    "knip": "NX_DAEMON=false knip",
    "postinstall": "npm run sync-ai-rules",
    "prepare": "husky",
    "sync-ai-rules": "nx build ai-rules && node ./dist/packages/ai-rules/scripts/sync.js common"
  },
  "workspaces": [
    "packages/*"
  ]
}
