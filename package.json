{
  "name": "@clipboard-health/core-utils",
  "dependencies": {
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@anthropic-ai/claude-agent-sdk": "0.2.45",
    "@nx/eslint": "22.5.0",
    "@nx/eslint-plugin": "22.5.0",
    "@nx/jest": "22.5.0",
    "@nx/js": "22.5.0",
    "@nx/webpack": "22.5.0",
    "@swc-node/register": "1.11.1",
    "@swc/core": "1.15.11",
    "@tsconfig/node24": "24.0.4",
    "@tsconfig/strictest": "2.0.8",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.13",
    "cspell": "9.6.4",
    "eslint": "8.57.1",
    "eslint-plugin-promise": "7.2.1",
    "husky": "9.1.7",
    "jest": "30.1.3",
    "jest-util": "30.0.5",
    "jsonc-eslint-parser": "2.4.2",
    "knip": "5.83.1",
    "lint-staged": "16.2.7",
    "markdownlint-cli2": "0.21.0",
    "nx": "22.5.0",
    "oxfmt": "0.34.0",
    "oxlint": "1.42.0",
    "promptfoo": "0.120.25",
    "syncpack": "13.0.4",
    "ts-jest": "29.4.2",
    "ts-node": "11.0.0-beta.1",
    "tsx": "4.21.0",
    "typedoc": "0.28.17",
    "typescript": "5.9.3"
  },
  "license": "MIT",
  "overrides": {
    "@anthropic-ai/claude-agent-sdk": {
      "zod": "3.25.76"
    },
    "@swc/core": "$@swc/core",
    "ts-node": "11.0.0-beta.1",
    "tsconfig-paths": "4.2.0"
  },
  "private": true,
  "scripts": {
    "affected": "nx affected --base main --configuration ci --parallel 8 --targets build,lint,test",
    "all": "npm run ci:check && nx run-many --configuration ci --parallel 8 --targets build,lint,test",
    "ci:check": "oxfmt --check && npm run cspell -- . && syncpack lint && npm run embed:check && npm run knip && npm run oxlint && npm run lint:md && npm run test:claude",
    "ci:install": "npm clean-install --audit false --fund false",
    "cspell": "cspell --no-summary --no-progress --no-must-find-files",
    "docs": "rm -rf docs && typedoc",
    "embed": "tsx packages/embedex/src/bin/cli.ts --sourcesGlob 'packages/*/examples/**/*.{md,ts}'",
    "embed:check": "npm run embed -- --check",
    "eval": "promptfoo eval --config evals/promptfooconfig.ts",
    "eval:view": "promptfoo view --yes",
    "format": "oxfmt",
    "knip": "NX_DAEMON=false knip",
    "lint:md": "markdownlint-cli2 \"**/*.md\"",
    "oxlint": "oxlint",
    "postinstall": "npm run sync-ai-rules",
    "prepare": "husky",
    "sync-ai-rules": "nx build ai-rules && node ./dist/packages/ai-rules/scripts/sync.js common --exclude common/featureFlags",
    "test:claude": "tsx --test .claude/**/*.spec.ts"
  },
  "workspaces": [
    "packages/*"
  ]
}
