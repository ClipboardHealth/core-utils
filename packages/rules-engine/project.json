{
  "name": "rules-engine",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/rules-engine/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project rules-engine --outputPath dist/packages/rules-engine --sourceRoot packages/rules-engine/src --tsConfig packages/rules-engine/tsconfig.lib.json --assets '[\"packages/rules-engine/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/rules-engine"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/rules-engine/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/rules-engine/jest.config.ts"
      }
    }
  }
}
