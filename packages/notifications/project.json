{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "notifications",
  "projectType": "library",
  "sourceRoot": "packages/notifications/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": ["packages/notifications/*.md"],
        "main": "packages/notifications/src/index.js",
        "outputPath": "dist/packages/notifications",
        "tsConfig": "packages/notifications/tsconfig.lib.json"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/notifications/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/notifications/jest.config.ts"
      }
    }
  }
}
