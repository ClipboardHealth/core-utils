{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "notifications",
  "projectType": "library",
  "sourceRoot": "packages/notifications/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project notifications --outputPath dist/packages/notifications --sourceRoot packages/notifications/src --tsConfig packages/notifications/tsconfig.lib.json --assets '[\"packages/notifications/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/notifications"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/notifications/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/notifications/jest.config.ts"
      }
    }
  }
}
