{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "*.json", "!**/package.json"],
  "parserOptions": {
    "project": "tsconfig.lint.json",
    "tsconfigRootDir": "packages/eslint-plugin"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "unicorn/filename-case": ["error", { "case": "camelCase" }]
      }
    }
  ]
}
