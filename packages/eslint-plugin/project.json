{
  "name": "eslint-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/eslint-plugin/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project eslint-plugin --outputPath dist/packages/eslint-plugin --sourceRoot packages/eslint-plugin/src --tsConfig packages/eslint-plugin/tsconfig.lib.json --assets '[\"packages/eslint-plugin/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/eslint-plugin"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/eslint-plugin/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/eslint-plugin/jest.config.ts"
      }
    }
  }
}
