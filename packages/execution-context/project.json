{
  "name": "execution-context",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/execution-context/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project execution-context --outputPath dist/packages/execution-context --sourceRoot packages/execution-context/src --tsConfig packages/execution-context/tsconfig.lib.json --assets '[\"packages/execution-context/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/execution-context"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/execution-context/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/execution-context/jest.config.ts"
      }
    }
  }
}
