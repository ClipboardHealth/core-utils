{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "project": "tsconfig.lint.json",
    "tsconfigRootDir": "packages/background-jobs-adapter"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "unicorn/filename-case": ["error", { "case": "camelCase" }]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
