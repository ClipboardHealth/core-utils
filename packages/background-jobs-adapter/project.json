{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "background-jobs-adapter",
  "projectType": "library",
  "sourceRoot": "packages/background-jobs-adapter/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project background-jobs-adapter --outputPath dist/packages/background-jobs-adapter --sourceRoot packages/background-jobs-adapter/src --tsConfig packages/background-jobs-adapter/tsconfig.lib.json --assets '[\"packages/background-jobs-adapter/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/background-jobs-adapter"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/background-jobs-adapter/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/background-jobs-adapter/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
