{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "project": "tsconfig.lint.json",
    "tsconfigRootDir": "packages/eslint-config"
  },
  "overrides": [
    {
      "files": "*.json",
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": "off"
      }
    }
  ],
  "rules": {
    "@typescript-eslint/ban-types": [
      "error",
      {
        "types": {
          "null": false
        },
        "extendDefaults": true
      }
    ],
    "capitalized-comments": "off"
  }
}
