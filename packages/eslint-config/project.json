{
  "name": "eslint-config",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/eslint-config/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project eslint-config --outputPath dist/packages/eslint-config --sourceRoot packages/eslint-config/src --tsConfig packages/eslint-config/tsconfig.lib.json --assets '[\"packages/eslint-config/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/eslint-config"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/eslint-config/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/eslint-config/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
