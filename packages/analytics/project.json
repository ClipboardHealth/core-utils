{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "analytics",
  "projectType": "library",
  "sourceRoot": "packages/analytics/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project analytics --outputPath dist/packages/analytics --sourceRoot packages/analytics/src --tsConfig packages/analytics/tsconfig.lib.json --assets '[\"packages/analytics/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/analytics"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/analytics/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/analytics/jest.config.ts"
      }
    }
  }
}
