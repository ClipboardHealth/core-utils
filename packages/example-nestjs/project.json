{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "example-nestjs",
  "projectType": "library",
  "sourceRoot": "packages/example-nestjs/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": ["packages/example-nestjs/*.md"],
        "main": "packages/example-nestjs/src/main.js",
        "outputPath": "dist/packages/example-nestjs",
        "tsConfig": "packages/example-nestjs/tsconfig.build.json"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/example-nestjs/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/json-api-nestjs/jest.config.ts"
      }
    }
  }
}
