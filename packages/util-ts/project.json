{
  "name": "util-ts",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/util-ts/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project util-ts --outputPath dist/packages/util-ts --sourceRoot packages/util-ts/src --tsConfig packages/util-ts/tsconfig.lib.json --assets '[\"packages/util-ts/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/util-ts"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/util-ts/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/util-ts/jest.config.ts"
      }
    }
  }
}
