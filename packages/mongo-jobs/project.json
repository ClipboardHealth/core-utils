{
  "name": "mongo-jobs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/mongo-jobs/src",
  "tags": ["scope:util"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "options": {
        "assets": ["packages/mongo-jobs/*.md"],
        "main": "packages/mongo-jobs/src/index.js",
        "outputPath": "dist/packages/mongo-jobs",
        "tsConfig": "packages/mongo-jobs/tsconfig.lib.json"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "maxWarnings": 0
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/mongo-jobs/jest.config.ts",
        "passWithNoTests": false
      },
      "outputs": ["{projectRoot}/coverage"]
    }
  }
}
