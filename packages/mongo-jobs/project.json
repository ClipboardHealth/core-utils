{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "mongo-jobs",
  "projectType": "library",
  "sourceRoot": "packages/mongo-jobs/src",
  "tags": ["scope:util"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project mongo-jobs --outputPath dist/packages/mongo-jobs --sourceRoot packages/mongo-jobs/src --tsConfig packages/mongo-jobs/tsconfig.lib.json --assets '[\"packages/mongo-jobs/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/mongo-jobs"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/mongo-jobs/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/mongo-jobs/jest.config.ts",
        "passWithNoTests": false
      },
      "outputs": ["{projectRoot}/coverage"]
    }
  }
}
