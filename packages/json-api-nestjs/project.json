{
  "name": "json-api-nestjs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/json-api-nestjs/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project json-api-nestjs --outputPath dist/packages/json-api-nestjs --sourceRoot packages/json-api-nestjs/src --tsConfig packages/json-api-nestjs/tsconfig.lib.json --assets '[\"packages/json-api-nestjs/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/json-api-nestjs"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/json-api-nestjs/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/json-api-nestjs/jest.config.ts"
      }
    }
  }
}
