{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "phone-number",
  "projectType": "library",
  "sourceRoot": "packages/phone-number/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project phone-number --outputPath dist/packages/phone-number --sourceRoot packages/phone-number/src --tsConfig packages/phone-number/tsconfig.lib.json --assets '[\"packages/phone-number/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/phone-number"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/phone-number/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/phone-number/jest.config.ts"
      }
    }
  }
}
