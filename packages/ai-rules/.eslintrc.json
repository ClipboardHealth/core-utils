{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "parserOptions": {
    "project": "tsconfig.lint.json",
    "tsconfigRootDir": "packages/ai-rules"
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "unicorn/filename-case": ["error", { "case": "camelCase" }]
      }
    },
    {
      "files": ["./src/bin/**/*.ts"],
      "rules": {
        "n/no-process-exit": "off",
        "n/shebang": "off",
        "no-console": "off",
        "security/detect-non-literal-fs-filename": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
