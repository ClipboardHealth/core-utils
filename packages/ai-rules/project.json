{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "ai-rules",
  "projectType": "library",
  "sourceRoot": "packages/ai-rules/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx scripts/build.ts",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/ai-rules/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "lint:md": {
      "executor": "nx:run-commands",
      "options": {
        "command": "markdownlint-cli2 '.ruler/**/*.md' 'README.md'",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/ai-rules/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
