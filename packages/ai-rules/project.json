{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "ai-rules",
  "projectType": "library",
  "sourceRoot": "packages/ai-rules/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "mkdir -p dist/packages/ai-rules",
          "cp packages/ai-rules/*.md dist/packages/ai-rules/",
          "cp packages/ai-rules/package.json dist/packages/ai-rules/"
        ],
        "parallel": false
      },
      "outputs": ["{workspaceRoot}/dist/packages/ai-rules"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/ai-rules/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/ai-rules/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
