{
  "name": "ai-rules",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/ai-rules/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "inputs": [
        "default",
        "{projectRoot}/scripts/**/*",
        "{projectRoot}/.ruler/**/*",
        "{projectRoot}/README.md",
        "{projectRoot}/package.json"
      ],
      "options": {
        "command": "tsx scripts/build.ts",
        "cwd": "{projectRoot}",
        "outputPath": "dist/packages/ai-rules"
      },
      "outputs": ["{options.outputPath}"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/ai-rules/**/*.[jt]s?(x)"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/ai-rules/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
