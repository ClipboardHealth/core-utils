{
  "name": "contract-core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/contract-core/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project contract-core --outputPath dist/packages/contract-core --sourceRoot packages/contract-core/src --tsConfig packages/contract-core/tsconfig.lib.json --assets '[\"packages/contract-core/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/contract-core"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/contract-core/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/contract-core/jest.config.ts"
      }
    }
  }
}
