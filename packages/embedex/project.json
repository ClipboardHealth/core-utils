{
  "name": "embedex",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/embedex/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project embedex --outputPath dist/packages/embedex --sourceRoot packages/embedex/src --tsConfig packages/embedex/tsconfig.lib.json --assets '[\"packages/embedex/*.md\", \"packages/embedex/static/**/*\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/embedex"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/embedex/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/embedex/jest.config.ts"
      }
    }
  }
}
