{
  "name": "json-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/json-api/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node scripts/oxc-build.mjs --project json-api --outputPath dist/packages/json-api --sourceRoot packages/json-api/src --tsConfig packages/json-api/tsconfig.lib.json --assets '[\"packages/json-api/*.md\"]'"
      },
      "outputs": ["{workspaceRoot}/dist/packages/json-api"],
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["packages/json-api/**/*.[jt]s"],
        "maxWarnings": 0
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "options": {
        "jestConfig": "packages/json-api/jest.config.ts"
      }
    }
  }
}
